    "rehype-pretty-code": "^0.14.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "server-only": "^0.0.1",
    "sharp": "^0.33.5",
    "swr": "^2.2.5",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@igorkowalczyk/eslint-config": "^1.6.4",
    "@igorkowalczyk/is-browser": "^5.0.1",
    "@igorkowalczyk/prettier-config": "^1.6.4",
    "@next/bundle-analyzer": "^15.0.3",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/typography": "^0.5.15",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.12.0",
