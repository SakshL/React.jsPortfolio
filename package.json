    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwind-gradient-mask-image": "^1.2.0",
    "tailwindcss": "^3.4.13",
    "tailwindcss-text-fill": "^0.2.0",
    "typescript": "^5.6.2",
    "cross-env": "^7.0.3"
  },
  "browserslist": [
    ">0.3%",
    "not ie 11",
    "not dead",
    "not op_mini all"
