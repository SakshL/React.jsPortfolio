    "@heroicons/react": "^2.1.5",
    "@tippyjs/react": "^4.2.6",
    "@vercel/analytics": "^1.3.1",
    "@vercel/og": "^0.6.3",
    "clsx": "^2.1.1",
    "contentlayer": "^0.3.4",
    "dotenv": "^16.4.5",
    "github-slugger": "^2.0.0",
    "next": "^15.0.3",
    "next-contentlayer": "^0.3.4",
    "next-nprogress-bar": "^2.3.13",
    "next-themes": "^0.4.3",
    "nprogress": "^0.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-parallax-tilt": "^1.7.238",
    "react-wrap-balancer": "^1.1.1",
    "reading-time": "^1.5.0",
